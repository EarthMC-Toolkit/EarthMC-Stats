{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2022",
        "lib": ["ES2022"],
        "moduleDetection": "force",
        "moduleResolution": "NodeNext",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "noEmitOnError": true,
        "allowJs": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        //"noImplicitAny": true,
        "outDir": "dist",
        "types": ["node"],
        "paths": {
            "tslib" : ["./node_modules/tslib/tslib.d.ts"]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "bot/archive",
        "bot/archive/nova",
        "bot/archive/nova/commands",
        "bot/archive/nova/commands/**"
    ],
}